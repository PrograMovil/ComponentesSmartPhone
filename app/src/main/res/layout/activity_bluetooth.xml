<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lab.componentessmartphone.BluetoothActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/bluetoothToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Bluetooth"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="#000"/>
            <ImageView
                android:foregroundGravity="right"
                android:id="@+id/fotoPerfilBluetooth"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:src="@drawable/home"/>



        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textoInformacionBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Como desea usar el Bluetooth?"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/enviarFoto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Enviar foto"/>


    <Button
        android:id="@+id/recibirFoto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Recibir foto"/>

    <ImageView
        android:id="@+id/imageViewFotoRecibida"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        />

</LinearLayout>
