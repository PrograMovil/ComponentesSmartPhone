<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lab.componentessmartphone.MainActivity">

    <Button
        android:text="Bluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bluetoothBtn"
        android:onClick="goToBluetooth"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.18" />

    <Button
        android:text="GPS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gpsBtn"
        android:layout_weight="0.18"
        android:onClick="goToGPS"/>

    <Button
        android:text="SMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/smsBtn"
        android:layout_weight="0.18"
        android:onClick="goToSMS"/>

    <Button
        android:text="Camara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/camaraBtn"
        android:layout_weight="0.18"
        android:onClick="goToCamara"/>

    <Button
        android:text="Audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/audioBtn"
        android:layout_weight="0.18"
        android:onClick="goToAudio"/>

    <Button
        android:text="Video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/videoBtn"
        android:layout_weight="0.18"
        android:onClick="goToVideo"/>

    <Button
        android:text="Llamada telefÃ³nica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llamadaBtn"
        android:layout_weight="0.18"
        android:onClick="goToLlamada"/>

    <Button
        android:text="Sensores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sensoresBtn"
        android:layout_weight="0.18"
        android:onClick="goToSensores"/>

</LinearLayout>
